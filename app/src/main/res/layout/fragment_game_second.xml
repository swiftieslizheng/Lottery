<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorsecondgame"
    android:layout_height="match_parent">
    <TextView
        style="@style/GameTitleTxt"
        android:text="@string/str_game2TitleTxt"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/str_gameNumTxt"
            style="@style/GameNumTxt" />
        <TextView
            android:id="@+id/txt_game_num_content"
            android:text="@string/str_gameNumContentTxt"
            style="@style/GameNumContentTxt" />
    </LinearLayout>
    <GridView
        android:id="@+id/second_gridView"
        android:numColumns="5"
        android:verticalSpacing="@dimen/space_xs"
        android:listSelector="#00000000"
        android:layout_marginTop="@dimen/space_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </GridView>

</LinearLayout>