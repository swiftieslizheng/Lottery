<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<!--首页RadioButton的Style-->
    <style name="MainButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/bottom_button_text_selector</item>
        <item name="android:textSize">@dimen/txt_s</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 全局头像的style -->
<style name="global_head_sculpture_style">
<item name="android:layout_width">@dimen/space_xxl</item>
<item name="android:layout_height">@dimen/space_xxl</item>
<item name="android:scaleType">centerCrop</item>
</style>
    <!-- 详情头像的style -->
    <style name="detail_head_sculpture_style">
    <item name="android:layout_width">@dimen/space_xxxl</item>
    <item name="android:layout_height">@dimen/space_xxxl</item>
    <item name="android:scaleType">centerCrop</item>
    </style>
    <!-- 全局名字的style -->
    <style name="global_name_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_m</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <!-- 全局小字（内容）的style -->
    <style name="global_content_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_s</item>
        <item name="android:textColor">@color/colorContent</item>
    </style>
    <!-- ButtomDialog动画的style -->
    <style name="BottomDialog_Animation">
        <item name="android:windowEnterAnimation">@anim/translate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/translate_dialog_out</item>
    </style>
    <!-- ButtomDialog的style -->
    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!--登陆界面的EditText-->
    <style name="activity_login_et">
        <item name="android:textSize">@dimen/txt_m</item>>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--登陆界面的ImageView-->
    <style name="activity_login_img">
        <item name="android:layout_centerVertical">true</item>>
        <item name="android:padding">@dimen/space_xs</item>>
        <item name="android:layout_marginLeft">@dimen/space_m</item>
        <item name="android:layout_width">@dimen/space_xl</item>
        <item name="android:layout_height">@dimen/space_xl</item>
    </style>
    <!--登陆界面的登陆文字-->
    <style name="activity_login_tx">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/txt_m</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--注册界面的LinearLayout-->
    <style name="fragment_register">
        <item name="android:layout_marginTop">@dimen/space_xxl</item>
        <item name="android:layout_marginLeft">@dimen/space_xxl</item>
        <item name="android:layout_marginRight">@dimen/space_xxl</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_xxl</item>
    </style>

    <!--个人中心-->
    <style name="fragment_person_tx">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingLeft">@dimen/space_l</item>
        <item name="android:textSize">@dimen/txt_s</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <!-- title的ImageButton的style -->
    <style name="title_imagebutton_style">
        <item name="android:layout_width">@dimen/space_l</item>
        <item name="android:layout_height">@dimen/space_l</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/space_m</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!-- 游戏页面底部Button的style -->
<style name="GameButtomBtn">
    <item name="android:layout_marginLeft">@dimen/space_m</item>
    <item name="android:layout_marginRight">@dimen/space_m</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
     <item name="android:layout_weight">1</item>
    <item name="android:background">@drawable/btn_background</item>
    <item name="android:layout_marginTop">@dimen/space_s</item>
    <item name="android:layout_marginBottom">@dimen/space_s</item>
    <item name="android:textColor">@color/colorWhite</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/txt_m</item>
</style>
    <!-- 游戏弹框页面的style -->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="PopupButtomWindow" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        ;!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        ;!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        ;!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        ;!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        ;!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        ;!-- 模糊 -->
    </style>
    <!-- 游戏弹框页面title的style -->
    <style name="GameTitleTxt">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/txt_m</item>
        <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:layout_marginTop">@dimen/space_s</item>
       <item name="android:layout_gravity">center</item>
       <item name="android:textStyle">bold</item>
    </style>
    <!-- 游戏弹框页面中奖号码txt的style -->
    <style name="GameNumTxt">
    <item name="android:textColor">@color/colorWhite</item>
    <item name="android:textSize">@dimen/txt_s</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/space_xs</item>
    <item name="android:layout_marginLeft">@dimen/space_xl</item>
    </style>
    <!-- 游戏弹框页面中奖内容txt的style -->
    <style name="GameNumContentTxt">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/txt_s</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_xs</item>
        <item name="android:layout_marginLeft">@dimen/space_xs</item>
    </style>
</resources>
